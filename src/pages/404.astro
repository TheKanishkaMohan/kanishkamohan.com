---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found" siteName="Kanishka Mohan" siteDescription="Page not found">
	<main class="flex min-h-screen flex-col items-center justify-center px-4 text-center">
		<h1 class="mb-4 text-6xl font-bold">404</h1>
		<p class="mb-8 text-xl">Oops! This page doesn't exist.</p>

		<a
			href="/"
			class="rounded-lg bg-black px-6 py-3 text-white transition-colors hover:bg-gray-800"
		>
			Go back home
		</a>
	</main>
</Layout>
